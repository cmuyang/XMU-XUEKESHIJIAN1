
.content {
  padding: 20rpx;
}
.news-list {
  margin-top: 20rpx;
}
.news-item {
  display: flex;
  align-items: center;
  padding: 20rpx;
  background-color: #f5f5f5;
  margin-bottom: 20rpx;
  border-radius: 10rpx;
}
.news-item:hover {
  background-color: #e0e0e0;
}
.news-image {
  width: 100rpx;
  height: 100rpx;
  margin-right: 20rpx;
  border-radius: 10rpx;
}
.news-details {
  flex: 1;
}
.news-title {
  font-weight: bold;
  font-size: 32rpx;
  margin-bottom: 10rpx;
}
.news-meta {
  color: #666;
  font-size: 24rpx;
}
.add-news-button {
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #409eff;
  color: #fff;
  text-align: center;
  border-radius: 10rpx;
  cursor: pointer;
}
.popup-content {
  padding: 20rpx;
}
.popup-input {
  margin-bottom: 20rpx;
}
input,
textarea,
button {
  width: 100%;
  padding: 20rpx;
  font-size: 28rpx;
  box-sizing: border-box;
  border: 1rpx solid #ccc;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
}
textarea {
  height: 200rpx;
}

